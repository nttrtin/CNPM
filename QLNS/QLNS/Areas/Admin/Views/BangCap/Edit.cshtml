@model QLNS.Models.BangCap

@{
    ViewData["Title"] = "Sửa Bằng Cấp";
}
<div class="card">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ID" />
            <div class="mb-3">
                <label asp-for="MaBangCap" class="control-label"></label>
                <input asp-for="MaBangCap" class="form-control" />
                <span asp-validation-for="MaBangCap" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TenBangCap" class="control-label"></label>
                <input asp-for="TenBangCap" class="form-control" />
                <span asp-validation-for="TenBangCap" class="text-danger"></span>
            </div>
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Cập nhật</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
