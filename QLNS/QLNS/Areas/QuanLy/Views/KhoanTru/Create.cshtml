@model QLNS.Models.KhoanTru

@{
    ViewData["Title"] = "Thêm Khoản Trừ";
}
<div class="card">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>
    <div class="card-body">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="MaKhoanTru" class="control-label"></label>
                <input asp-for="MaKhoanTru" class="form-control" />
                <span asp-validation-for="MaKhoanTru" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LyDoKhoanTru" class="control-label"></label>
                <input asp-for="LyDoKhoanTru" class="form-control" />
                <span asp-validation-for="LyDoKhoanTru" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SoTienKhoanTru" class="control-label"></label>
                <input asp-for="SoTienKhoanTru" class="form-control" />
                <span asp-validation-for="SoTienKhoanTru" class="text-danger"></span>
            </div>

            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Thêm mới</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

