@model QLNS.Models.Luong

@{
    ViewData["Title"] = "Chi Tiết Lương";
}

<div class="card">
    <h5 class="card-header text-center">@ViewData["Title"]</h5>
    <br />
    <div class="card-body" style="display: flex; ">
        <div class="d-block flex-shrink-0" style="align-items:center;">
            <img class="rounded-circle" style="margin-left:50px" src="~/uploads/@Model.NhanVien.HinhAnh" width="80" />
            <dl class="row">
                <dt class="col-sm-0" style="text-align:center">
                    @Html.DisplayNameFor(model => model.NhanVien.MaNhanVien):
                </dt>
                <dd class="col-sm-0" style="text-align:center">
                    @Html.DisplayFor(model => model.NhanVien.MaNhanVien)
                </dd>
            </dl>
        </div>
        <dl class="row" style="margin-left: calc(3* var(--bs-gutter-x));">

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.NhanVienID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NhanVien.TenNhanVien)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ThangID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ThangID)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ThoiGianLamViecID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ThoiGianLamViec.SoNgayCong)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ChucVuID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ChucVu.TenChucVu)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.LuongCoBanID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ChucVu.LuongCoBan)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhuCapID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PhuCap.TenPhuCap)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhuCap.SoTienPhuCap)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PhuCap.SoTienPhuCap)
            </dd>



        </dl>

        <dl class="row" style="margin-left: calc(-1* var(--bs-gutter-x));">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.LyDoKhoanTruID)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.KhoanTru.LyDoKhoanTru)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.KhoanTruID)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.KhoanTru.SoTienKhoanTru)
            </dd>


            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.LyDoKhenThuongID)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.KhenThuong.LyDoKhenThuong)
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.KhenThuongID)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.KhenThuong.TienThuong)
            </dd>


            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.PhuongThucThanhToan)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.PhuongThucThanhToan)
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.NgayThanhToan)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.NgayThanhToan)
            </dd>

            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.TongThuNhap)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.TongThuNhap)
            </dd>
        </dl>
    </div>
    <div class="mb-0 text-center">
        <button type="submit" class="btn btn-primary"> <a asp-action="Edit" asp-route-id="@Model?.ID" style="color: white"><i class="fa-solid fa-floppy-disk text-white"></i> Cập nhật</a></button> hoặc <a asp-action="Index">Quay về danh sách</a>
    </div>
    <br />
    <br />
</div>
