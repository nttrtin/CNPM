@model IEnumerable<QLNS.Models.CongTac>

@{
    ViewData["Title"] = " Lịch Công Tác";
}
<div class="card">
    <h2 class="card-header text-center text-light bg-dark" style="font-weight: 500;font-family:none;">@ViewData["Title"]</h2>
    <div class="card-body">
        <div class="row mb-3">
        
            <div class="col-md-6 text-end">
                <div id="export-buttons"></div>
            </div>
        </div>
        <table id="datatable" class="table table-sm table-hover table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th class="align-middle text-center">   @Html.DisplayNameFor(model => model.MaCongTac)</th>
                    <th class="align-middle text-center">  @Html.DisplayNameFor(model => model.NgayBatDau)</th>
                    <th class="align-middle text-center">   @Html.DisplayNameFor(model => model.NgayKetThuc)</th>
                    <th class="align-middle text-center">  @Html.DisplayNameFor(model => model.DiaDiemCongTac)</th>
                    <th class="align-middle text-center">    @Html.DisplayNameFor(model => model.MucDich)</th>
                    <th class="align-middle text-center">   @Html.DisplayNameFor(model => model.NhanVien)</th>
                    <th class="align-middle text-center">  @Html.DisplayNameFor(model => model.ChucVu)</th>
                    <th class="align-middle text-center">    @Html.DisplayNameFor(model => model.TrangThai)</th>
           
                    <th width="5%" class="align-middle text-center">Sửa</th>
                    <th width="5%" class="align-middle text-center">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center"> @Html.DisplayFor(modelItem => item.MaCongTac)</td>
                        <td class="align-middle text-center"> @Html.DisplayFor(modelItem => item.NgayBatDau)</td>
                        <td class="align-middle text-center"> @Html.DisplayFor(modelItem => item.NgayKetThuc)</td>
                        <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.DiaDiemCongTac)</td>
                        <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.MucDich)</td>
                        <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.NhanVien.DiaChi)</td>
                        <td class="align-middle text-center"> @Html.DisplayFor(modelItem => item.ChucVu.TenChucVu)</td>
                        <td class="align-middle text-center">  @Html.DisplayFor(modelItem => item.TrangThai)</td>
  
                        <td class="align-middle text-center"><a asp-action="Edit" asp-route-id="@item.ID"><i class="fa-light fa-pen-to-square"></i></a></td>
                        <td class="align-middle text-center"><a asp-action="Delete" asp-route-id="@item.ID"><i class="fa-light fa-trash-can text-danger"></i></a></td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>
