@model QLNS.Models.NghiPhep

@{
    ViewData["Title"] = "Xóa Nghỉ Phép";
}
<div class="card">
    <h2 class="card-header text-center text-light bg-dark" style="font-weight: 500;font-family:none;">@ViewData["Title"]</h2>
    <div class="card-body">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <div class="alert alert-danger" role="alert">
                <i class="fa-light fa-triangle-exclamation"></i> Bạn có muốn xóa số giờ làm việc không <strong>@Model.NhanVienID</strong> không?
            </div>
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-circle-check"></i> Xác nhận xóa</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>